<button id="sidebar-toggle">
  <span class="expanded">
    <span class="screen-reader-text">Close Menu</span>
    <svg fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><path fill="none" d="M0 0h16v16H0z"/><path d="m12.7 4.7-1.4-1.4L8 6.6 4.7 3.3 3.3 4.7 6.6 8l-3.3 3.3 1.4 1.4L8 9.4l3.3 3.3 1.4-1.4L9.4 8"/></svg>
  </span>
  <span class="not-expanded">
    <span class="screen-reader-text">Menu</span>
    <svg fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><path fill="none" d="M0 0h16v16H0z"/><path d="M0 14h16v-2H0v2zM0 2v2h16V2H0zm0 7h16V7H0v2z"/></svg>
  </span>
</button>
<script>
  const toggleEl = document.querySelector("#sidebar-toggle");
  toggleEl.addEventListener("click", () => {
    const navEl = document.querySelector("#sidebar-nav");
    
    toggleEl?.toggleAttribute("aria-expanded");
    navEl?.toggleAttribute("aria-expanded");
  })
</script>